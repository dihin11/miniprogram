.upload-area {
  width: 100%;
  padding: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.photo-container {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.photo-slot {
  width: 300rpx;
  height: 400rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.photo-slot image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #999;
}

.icon-camera {
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.submit-btn[disabled] {
  background: #ccc;
}